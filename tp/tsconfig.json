{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@entities/*": ["entities/*"],
      "@lib/*": ["lib/*"],
      "@schemas/*": ["schemas/*"],
      "@routes/*": ["routes/*"],
      "@hooks/*": ["hooks/*"],
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"]
}
